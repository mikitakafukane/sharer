
<div class="contents row">
  <div class="container">
    <%= form_with model: @post, url:posts_path, method: :post, local: true do |f| %>
      <%= f.text_area :content, placeholder: "text", rows: "10" %>
      <%= f.hidden_field :user_id %>
      <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>

<div class="comment">
  <% @posts.each do |post|%>
    <div class="comments">
      <%= post.content %>
    </div>
    <% if user_signed_in? %>
      <% if post.liked_by?(current_user) %>
          <p><span>お気に入り解除: </span><%=link_to post.likes.count, post_likes_path(post.id), method: :delete %></p>
      <% else %>
          <p><span>お気に入り登録: </span><%=link_to post.likes.count, post_likes_path(post.id), method: :post %></p>
      <% end %>
    <% else %>
      <p><span>お気に入り数: </span><%= post.likes.count %></p>
    <% end %>
    
    <%= @comments.each do |comment| %>
      <%= comment.content %>
    <% end %>
    
