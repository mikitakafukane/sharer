<%= render "layouts/error_messages", resource: @contact %>

<div class="col-lg-3 py-4 px-4 bg-light mx-auto">
<!--<h2 class="mb-3">お問い合わせ</h2>-->

<%= form_with(model: contact, local: true) do |form| %>
<table>

  <tr class="field">
    <td><%= form.label :名前 %></td>
    <td><%= form.text_field :name, autofocus: true, class: "form-control" %></td>
  </tr>

  <tr class="field">
    <td><%= form.label :メールアドレス %></td>
    <td><%= form.text_field :email, class: "form-control" %></td>
  </tr>

  <tr class="field">
    <td><%= form.label :内容 %></td>
    <td><%= form.text_area :content, class: "form-control" %></td>
  </tr>

  <tr class="actions">
    <td><%= form.submit "送信", class: "btn btn-success mt-2" %></td>
    <td></td>
  </tr>
</table>
<% end %>
<%= link_to '戻る', root_path, class: "btn btn-primary mt-2" %>
</div>
