<div class="row">
	<div class="sidebar col-lg-2">
	<%= link_to "マイページに戻る", user_path(current_user), class: "btn btn-primary" %>

	<%= link_to "ユーザー追加除外", room_belongings_index_path(@room), class: "btn btn-success" %>
	　　<% @room.users.each do |user| %>
	        <p><%= link_to user.name, user_path(user) %></br>
	        [最終ログイン]<%= user.current_sign_in_at.strftime('%-m/%-d %-H:%-M') %>
	        </p>
	    <%  end %>
	</div>
	<div class="col-lg-9 col-lg-ofset-1">


<h2 class="text-white">ルーム：<%= @room.name %> </h2>
<div class="py-4 px-4 bg-light">

	<% @posts.each do |post| %>
	    <div class=" py-4 px-4 mt-3">
	      <%= post.content %>
	        <% if post.liked_by?(current_user) %>
	            <p><%=link_to "いいね#{post.likes.count}", post_likes_path(post.id), method: :delete %></p>
	        <% else %>
	            <p><%=link_to "いいね#{post.likes.count}", post_likes_path(post.id), method: :post %></p>
	        <% end %>

	      <% post.comments.each do |comment| %>
	        <ul class="media-list">
	          <li class="media">
	            <%= attachment_image_tag comment.user, :image, :fill, 40, 40, fallback: "no_image.jpg" %>
	            <%= comment.content %>
	          </li>
	        </ul>
	      <% end %>

	    </div>
	  <% end %>
</div>


	</div>
</div>