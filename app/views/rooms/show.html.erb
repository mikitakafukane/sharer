<div class="row">
	<div class="sidebar col-lg-2">
    <h2 class="text-white">ルーム</br><%= @room.name %> </h2>
  	<%= link_to "マイページに戻る", user_path(current_user), class: "btn btn-dark" %>
　　<% @room.users.each do |user| %>
　　<hr>
      <p><%= link_to user.name, user_path(user) %></br>
      [最終ログイン]<%= user.current_sign_in_at.strftime('%-m月%-d日 %-H:%M') %>
      <%= render 'tasks/chart', tasks: user.tasks, user: user  %>
      </p>
    <% end %>
	</div>
	<div class="col-lg-6">
	  <!--<div class="row">-->
      <h3 class="text-white mt-5">ルームメンバーの投稿一覧</h3>
   <!--   <div class="col-lg-8 form-inline">-->
   <!--     <= search_form_for @q do |f| %>-->
   <!--       <= f.search_field :content_cont, class: "form-control", placeholder: "投稿で検索" %>-->
   <!--       <= f.submit "検索", class: "btn btn-light" %>-->
   <!--     < end %>-->
   <!--   </div>-->
   <!-- </div>-->
    <div class="py-4 px-4 bg-light">
      <%= render "posts/form", post: @post %>
    </div>
    <% @posts.each do |post| %>
      <div class="py-4 px-4 bg-light mt-3">
        <p><%= post.content %></p>
        <p class="text-right">
          <%= post.created_at.strftime('%-m月%-d日 %-H:%M') %>
          <%if post.user_id == current_user.id %>
            <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "投稿「#{post.content}」を削除します。よろしいですか？" } %>
          <% end %>
        </p>
        <hr>
        <div id="like-btn-<%= post.id %>">
          <%= render 'likes/like', post: post %>
          <%= "コメント数:#{post.comments.count}" %>
        </div>
        <div class="my-2">
          <%= form_with model: [post, @comment], local: true do |f| %>
            <%= f.text_field :content, class: "form-control", placeholder: "コメントを入力" %>
            <%= f.hidden_field :user_id %>
          <% end %>
        </div>
        <% post.comments.each do |comment| %>
          <ul class="media-list">
            <li class="media">
              <%= attachment_image_tag comment.user, :image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %>
              <%= comment.user.name %>
              <%= comment.created_at.strftime('%-m月%-d日 %-H:%M') %></br>
              <%= comment.content %>
              <%= link_to "削除", post_comment_path(comment), method: :delete, data: { confirm: "コメント「#{comment.content}」を削除します。よろしいですか？" } %></td>
            </li>
          </ul>
        <% end %>
      </div>
    <% end %>
	</div>
	<div class="col-lg-4">
  	<h3 class="text-white mt-5">ルームチャット</h3>
  	<div class="bg-light py-4 px-4">
      <%= form_with model: @chat, url:chats_path, method: :post, local: true do |f| %>
        <%= f.text_field :content, class: "form-control", placeholder: "チャット" %>
        <%= f.hidden_field :room_id %>
      <% end %>
  	  <%= render 'chats/show', chats: @chats, user: @user %>
  	</div>
	</div>

</div>