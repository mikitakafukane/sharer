<h2 class="text-white">ルーム一覧</h2>
	<div class="py-4 px-4 bg-light">

  <%= link_to "新規グループ", new_room_path, class: "btn btn-primary" %>

    <table class= "table table-hover">
      <thead class= "thead-default">
        <tr>
          <th>ルーム</th>
          <th></td>
        </tr>
      </thead>
      <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td>
            <%= link_to "所属メンバー一覧", room_path(room), class: "btn btn-success" %>
            <%= link_to "編集", edit_room_path(room), class: "btn btn-success" %>
            <%= link_to "削除", room, method: :delete, data: { confirm: "ルーム「#{room.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %>
          </td>
        </tr>
      <%  end %>
      </tbody>
    </table>
  </div>