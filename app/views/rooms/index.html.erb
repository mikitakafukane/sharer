<h2 class="text-white">ルーム一覧</h2>
	<div class="py-4 px-4 bg-light">

  <%= link_to "ルーム作成", new_room_path, class: "btn btn-success mb-3" %>

    <table class= "table table-hover">
      <thead class= "thead-default">
        <tr>
          <th>ルーム名</th>
          <th></td>
        </tr>
      </thead>
      <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td>
            <%= link_to "編集", edit_room_path(room), class: "btn btn-primary" %>
            <%= link_to "詳細", room_path(room), class: "btn btn-warning" %>
          </td>
        </tr>
      <%  end %>
      </tbody>
    </table>
  </div>