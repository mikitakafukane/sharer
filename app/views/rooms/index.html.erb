<%= render "layouts/error_messages", resource: @room %>
<h2 class="text-white">ルーム</h2>
<div class="row">
	<div class="col-md-5 bg-light p-4 mx-3">
	  <h4 class="d-none d-md-block">ルーム新規作成</h4>
		<h4 class="js-accordion-title d-block d-md-none text-center"><i class="fas fa-plus-square"></i>ルーム新規作成</h4>
    <div class="accordion-content">

    <%= render 'form', room: @room %>
  </div>
    </div>
  <div class="col-md-5 bg-light p-4 m-3 m-md-0">
    <h4 class="d-none d-md-block">参加ルーム一覧</h4>
 		<h4 class="js-accordion-title d-block d-md-none text-center"><i class="fas fa-layer-group"></i>参加ルーム一覧</h4>
 		<div class="accordion-content">
    <table class= "table">
        <tr>
          <th>ルーム名</th>
          <th></td>
        </tr>
        <% @rooms.each do |room| %>
            <tr>
              <td><%= room.name %></td>
              <td>
                <%= link_to "編集", edit_room_path(room), class: "btn btn-primary" %>
                <%= link_to "参加", room_path(room), class: "btn btn-success" %>
              </td>
            </tr>
        <% end %>
    </table>
  </div>
  </div>
</div>