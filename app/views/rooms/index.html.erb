<%= render "layouts/error_messages", resource: @room %>
<h2 class="text-white">ルーム</h2>
<div class="row">
	<div class="col-md-5 bg-light p-4 mx-3">
	  <h4>ルーム新規作成</h4>
    <%= render 'form', room: @room %>
  </div>
  <div class="col-md-5 bg-light p-4 m-3 m-md-0">
    <h4>参加ルーム一覧</h4>
    <table class= "table">
        <tr>
          <th>ルーム名</th>
          <th></td>
        </tr>
        <% @rooms.each do |room| %>
            <tr>
              <td><%= room.name %></td>
              <td>
                <%= link_to "編集", edit_room_path(room), class: "btn btn-primary" %>
                <%= link_to "参加", room_path(room), class: "btn btn-success" %>
              </td>
            </tr>
        <% end %>
    </table>
  </div>
</div>