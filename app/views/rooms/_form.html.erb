<%= link_to "ルーム一覧に戻る", rooms_path, class: "btn btn-primary" %>
<div>
  <%= form_with model: room, local: true do |f| %>
    <div class="form-inline mt-3">
      <%= f.label :ルーム名 %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
  <table class="table ">
    <tr>
      <th><%= f.label :名前 %></td>
      <th><%= f.label :追加・除外 %></td>
    </tr>
    <%= f.collection_check_boxes(:user_ids, User.all, :id, :name) do |b| %>
      <%= b.label do %>
      <tr>
        <td><%= b.text %></td>
        <td><%= b.check_box %></td>
      </tr>
      <% end %>
    <% end %>
    <tr>
      <td><%= f.submit "作成", class: "btn btn-success mt-3" %></td>
      <td></td>
    </tr>
  <% end %>
  </table>
</div>