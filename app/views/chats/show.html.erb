<h2 class="text-white">チャット</h2>
  <div class="py-4 px-4 bg-light">
    <table>
        <thead>
            <tr>
                <td>投稿者名</td>
                <td>投稿内容</td>
            </tr>
        </thead>
        <tbody>
            <% @chats.each do |chat| %>
                <tr>
                    <td><%= chat.user.name %></td>
                    <td><%= chat.content %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= form_with model: @chat, url:chats_path, method: :post, local: true do |f| %>
        <%= f.text_field :content, class: "form-control" %>
        <%= f.hidden_field :room_id %>
    <% end %>
  </div>