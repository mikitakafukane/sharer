<table class= "table table-hover">
  <thead class= "thead-default">
    <tr>
      <th>タスク</th>
      <th>期限</th>
      <th>完了日時</th>
      <th>ステータス</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.end_date %></td>
      <td><%= task.created_at %></td>
      <td id="task<%= task.id %>" ><%= task.status %></td>
      <% if task.user_id == current_user.id %>
        <td><%= button_to '完了', done_path(task), method: :post, remote: true, class: "btn btn-success" %></td>
        <td><%= link_to "編集", edit_task_path(task), class: "btn btn-primary" %></td>
      <% end %>
    </tr>
  <%  end %>

  </tbody>
</table>