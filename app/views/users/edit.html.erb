<h2 class="text-white">登録情報編集</h2>
<div class="py-4 px-4 bg-light">
  <%= link_to "戻る", user_path(@user), class: "btn btn-primary" %>

  <%= form_with model: @user, local: true , method: :patch do |f| %>
    <table>
      <tr>
        <td><%= f.label "ユーザーID" %></td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <td><%= f.label "名前" %></td>
        <td><%= f.text_field :name, autofocus: true, class: "form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label "メールアドレス" %></td>
        <td><%= f.email_field :email, class: "form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label "所属" %></td>
        <td><%= f.text_field :belonging, class: 'form-control' %></td>
      </tr>
      <tr>
        <td><%= f.label "アイコン画像" %></td>
        <td><%= f.attachment_field :image, class: "form-control-file" %></td>
      </tr>
      <tr>
        <td><%= f.submit "変更内容を保存", class: "btn btn-block btn-success" %></td>
        <td></td>
      </tr>
    </table>
  <% end  %>
</div>