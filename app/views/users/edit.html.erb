<div class="mx-auto w-50">
  <div class="row m-3">
    <p class="col-md-3"><%= link_to "戻る", user_path(@user), class: "fas fa-arrow-circle-left btn btn-lg" %></p>
    <h2 class="text-center col-md-9">登録情報編集</h2>
  </div>

  <%= form_with model: @user, local: true , method: :patch do |f| %>
    <%#= bootstrap_devise_error_messages! %>
    <div class="form-inline mb-3">
    <label class="mr-4">ユーザーID</label>
    <p><%= @user.id %></p>
    </div>
    <div class="form-inline mb-3">
      <label class="mr-4">名前　</label>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control mr-3" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "所属" %><br />
      <%= f.text_field :belonging, autocomplete: 'address', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "アイコン画像" %>
      <%= f.attachment_field :image, class: "form-control-file col-md-8 pl-0" %>
    </div>

    <div class="form-group">
      <%= f.submit "変更内容を保存", class: "btn btn-block btn-success" %>

    </div>
  <% end  %>
  <%#= link_to "退会する", quit_customer_path(@customer), class: "btn btn-danger" %>
</div>